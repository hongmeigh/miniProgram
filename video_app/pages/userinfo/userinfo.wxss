.personal-info {
    padding: 40rpx;
}
.info-item {
    height: 120rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 30rpx;
    color: #333;
}
.info-item input {
    display: block;
    width: 100%;
    height: 100%;
}
.info-item .color-333 {
    color: #333;
}
.info-item .picker-sex {
    display: block;
    width: 100%;
    height: 100%;
    line-height: 120rpx;
}
.save-btn {
    width: 90%;
    height: 70rpx;
    color: #fff;
    text-align: center;
    line-height: 70rpx;
    background-color: #A020F0;
    border-radius: 10rpx;
    margin: 60rpx auto 0;
    font-size: 30rpx;
}
.user-img {
    line-height: 120rpx;
    font-size: 30rpx;
    color: #333;
}
.user-img image {
    line-height: 120rpx;
    width: 100rpx;
    height: 100rpx;
    float: right;
}