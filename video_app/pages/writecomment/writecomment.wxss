/* pages/writecomment/writecomment.wxss */
.write-comment {
    padding: 0 40rpx;
}
.write-comment .publish-textarea {
    width: 100%;
    height: 600rpx;
    color: #333;
    font-size: 28rpx;
    padding: 30rpx 0;
}
.write-comment .publish {
    font-size: 32rpx;
    padding: 20rpx 0;
    color: #A020F0;
    border-bottom: 1rpx solid #eee;
    text-align: right;
}
.popup-wrap .black-bg {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #000;
    opacity: 0.6;
}
.popup-wrap .popup {
    position: fixed;
    width: 100%;
    border-radius: 0rpx;
    background-color: #fff;
    bottom: 0;
    left: 0;
    z-index: 99;
}
.popup-wrap .popup .cont {
    width: 100%;
    padding: 40rpx 0;
    text-align: center;
    font-size: 32rpx;
    color: #333;
    border-bottom: 1px solid #ddd;
}
.popup-wrap .popup .close {
    position: absolute;
    width: 30rpx;
    height: 30rpx;
    top: 30rpx;
    right: 30rpx;
}
.popup-wrap .popup button {
    width: 100%;
    padding: 20rpx 0;
    text-align: center;
    font-size: 36rpx;
    color: #A020F0;
    background-color: #fff;
    border: none;
}
.popup-wrap .popup button::after {
    border: none;
}