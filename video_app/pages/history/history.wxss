.history-cont {
    padding: 40rpx 40rpx;
}
.history-list .history-item {
    margin-bottom: 40rpx;
    width: 100%;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    box-shadow: 0 6rpx 20rpx #eee;
}
.history-list .history-item .video {
    width: 100%;
    height: 320rpx;
}
.history-list .history-item .video .video-v {
    width: 100%;
    height: 100%;
}
.history-list .history-item .video .start-image {
    width: 100%;
    height: 100%;
    position: relative;
}
.history-list .history-item .bg-img {
    width: 100%;
    height: 100%;
}
.history-list .history-item .play-icon {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -50rpx;
    margin-top: -50rpx;
}
.history-list .history-item .video-info {
    padding: 30rpx;
}
.history-list .history-item .video-info .tit {
    font-size: 32rpx;
    color: #333;
}
.history-list .history-item .video-info .date {
    font-size: 28rpx;
    color: #666;
    margin-top: 10rpx;
}
.loading {
    text-align: center;
    font-size: 28rpx;
    color: #333;
    line-height: 3;
}