.search-wrap {
  margin: 20rpx 40rpx;
  position: relative;
}
.search-wrap .search-input {
  width: 100%;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #eee;
  font-size: 26rpx;
  color: #999;
  padding-left: 100rpx;
  box-sizing: border-box;
}
.search-wrap .search-icon {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 10rpx;
  left: 30rpx;
}
.search-history {
    margin: 100rpx 40rpx;
}
.search-history .tit, .hot-search .tit {
    margin-bottom: 20rpx;
    font-size: 32rpx;
    color: #333;
}
.search-history .tag, .hot-search .tag {
    font-size: 26rpx;
    color: #666;
    display: inline-block;
    padding: 6rpx 20rpx;
    border-radius: 10rpx;
    border: 2rpx solid #666;
    margin: 16rpx 20rpx 0 0;
}
.hot-search {
    padding: 30rpx 40rpx 0;
    /* border-top: 40rpx solid #eee; */
}