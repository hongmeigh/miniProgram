/* pages/user/user.wxss */
.user-info {
    padding: 0 30rpx;
}
.user-info .info {
    padding: 100rpx 0
}
.user-info .info .user-img {
    width: 200rpx;
    height: 200rpx;
    display: block;
    margin: 0 auto;
    border-radius: 100rpx;
}
.user-info .info .user-name {
    text-align: center;
    font-size: 32rpx;
    margin-top: 20rpx;
    color: #333;
}
.list-item {
    font-size: 32rpx;
    color: #111;
    padding: 40rpx 30rpx;
    border-bottom: 1rpx solid #eee;
}
.list-group {
    border-top: 20rpx solid #f8f8f8;
}
.list-item .right-icon {
    float: right;
    width: 30rpx;
    height: 30rpx;
    margin-top: 6rpx;
}
.popup-wrap .black-bg {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #000;
    opacity: 0.6;
}
.popup-wrap .popup {
    position: fixed;
    width: 80%;
    border-radius: 10rpx;
    background-color: #fff;
    top: 50%;
    margin-top: -200rpx;
    left: 10%;
    z-index: 99;
}
.popup-wrap .popup .cont {
    width: 100%;
    padding: 60rpx 0;
    text-align: center;
    font-size: 36rpx;
    color: #333;
    border-bottom: 1px solid #ddd;
}
.popup-wrap .popup button {
    width: 100%;
    padding: 20rpx 0;
    text-align: center;
    font-size: 32rpx;
    color: #A020F0;
    background-color: #fff;
    border: none;
}
.popup-wrap .popup button::after {
    border: none;
}