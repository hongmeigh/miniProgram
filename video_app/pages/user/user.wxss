.user-info {
    padding: 0 30rpx;
}
.user-info .info {
    padding: 100rpx 0
}
.user-info .info .user-img {
    width: 200rpx;
    height: 200rpx;
    display: block;
    margin: 0 auto;
}
.user-info .info .user-name {
    text-align: center;
    font-size: 32rpx;
    margin-top: 20rpx;
    color: #333;
}
.list-item {
    font-size: 32rpx;
    color: #111;
    padding: 40rpx 30rpx;
    border-bottom: 1rpx solid #eee;
}
.list-group {
    border-top: 20rpx solid #f8f8f8;
}
.list-item .right-icon {
    float: right;
    width: 30rpx;
    height: 30rpx;
    margin-top: 6rpx;
}